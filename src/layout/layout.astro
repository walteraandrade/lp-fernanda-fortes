---
import { Image } from "astro:assets";
import deskBackground from "../assets/images/desk-background.jpeg";
import mobileBackground from "../assets/images/mobile--background.jpeg";
import whatsappIcon from "../assets/images/whatsapp.png";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Atendimento psicológico para crianças e adolescentes por Fernanda Fortes."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/plantinha.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Google Tag Manager -->
    <script>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-K5ZJ6VBL");
    </script>
    <!-- End Google Tag Manager -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;700&family=Lato:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <style is:global>
      @import "/src/styles/global.css";
    </style></head
  >

  <body class="relative w-full">
    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-K5ZJ6VBL"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->

    <Image
      src={deskBackground}
      alt="background image"
      class="absolute top-0 w-full h-full -z-10 hidden md:inline-block"
    />
    <Image
      src={mobileBackground}
      alt="background image"
      class="absolute top-0 left-0 w-full h-full -z-10 md:hidden"
    />
    <slot />
  </body>
</html>
